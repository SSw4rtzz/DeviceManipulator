<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/verNiveis"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/inicio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        app:srcCompat="@drawable/inicio" />

    <TableLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inicio">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btnNivel1"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/black"
                android:text="1"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:drawableTint="@color/white"/>

            <Button
                android:id="@+id/btnNivel2"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/black"
                android:text="2"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:drawableTint="@color/white"/>

            <Button
                android:id="@+id/btnNivel3"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/black"
                android:text="3"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:drawableTint="@color/white"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btnNivel4"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/black"
                android:text="4"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:drawableTint="@color/white"/>

            <Button
                android:id="@+id/btnNivel5"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/black"
                android:text="5"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:drawableTint="@color/white"/>

            <Button
                android:id="@+id/btnNivel6"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/black"
                android:text="6"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:drawableTint="@color/white"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnNivel7"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:drawableTint="@color/white"
                android:text="7"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnNivel8"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="#242424"
                android:drawableLeft="@drawable/brevemente"
                android:drawableTint="@color/white"
                android:text="8"
                android:textSize="40sp"
                android:enabled="false" />

            <Button
                android:id="@+id/btnNivel9"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:backgroundTint="#242424"
                android:drawableLeft="@drawable/brevemente"
                android:text="9"
                android:drawableTint="@color/white"
                android:textSize="40sp"
                android:enabled="false"
                />

        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>